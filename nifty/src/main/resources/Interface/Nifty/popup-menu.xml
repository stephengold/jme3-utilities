<!--
 Nifty XML to create a generic popup menu for a screen controlled by
 SimpleScreenController.

 When a popup is activated, the rest of the screen dims by 50%.
 To close an active popup without selecting an item, simply click
 outside the popup.
-->
<nifty xmlns="http://nifty-gui.lessvoid.com/nifty-gui">

    <!-- define styles and controls -->
    <useStyles filename="nifty-default-styles.xml"/>
    <useStyles filename="Interface/Nifty/styles/bats.xml"/>
    <useControls filename="nifty-default-controls.xml"/>

    <popup id="popup-menu"
           backgroundColor="#0008"
           childLayout="absolute-inside">
        <control name="niftyMenu" id="#menu"/>
        <interact
            onClick="closeActivePopupMenu()"
            onSecondaryClick="closeActivePopupMenu()"
            onTertiaryClick="closeActivePopupMenu()"/>
    </popup>
</nifty>